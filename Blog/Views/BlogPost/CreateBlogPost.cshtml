@model Blog.Models.BlogPostModel



<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 style="color:#2a2438">Add New Post</h2>
            <hr />
        </div>        
        <div class="mb-3">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Text"></label>
            <textarea rows="5" asp-for="Text" class="form-control"></textarea>
            <span asp-validation-for="Text" class="text-danger"></span>
        </div>
        <button type="submit" class="btn" style="width:150px;background-color:#352f44; color:#dbd8e3">Add Post</button>
        <a asp-controller="BlogPost" asp-action="Index" class="btn btn-secondary" style="width:150px;background-color:#dbd8e3; color:#352f44">
            Go Back
        </a>
    </div>
</form>