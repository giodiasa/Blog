@model Blog.Models.BlogPostModel

<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 style="color: #dc2f2f">Delete This Post?</h2>
            <hr />
        </div>
        <h1 class="card-title">@Model.Title</h1>
        <button type="submit" class="btn" style="width:150px; background-color:#dc2f2f; color:#fbf2d5">Delete</button>
        <a asp-controller="BlogPost" asp-action="GetBlogPost" asp-route-id="@Model.Id" class="btn btn-secondary" style="width:150px;background-color:#394a51; color:#fbf2d5">
            Cancel
        </a>
    </div>
</form>