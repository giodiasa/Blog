@model Blog.Models.BlogPostModel


<form method="post" asp-action="UpdateBlogPost">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 style="color: #394a51">Edit Post</h2>
            <hr />
        </div>
        <input hidden asp-for="Id"/>
        <div class="mb-3">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Text"></label>
            <textarea rows="5" asp-for="Text" class="form-control"></textarea>
            <label hidden asp-for="CreateDate"></label>
            <input hidden asp-for="CreateDate" />
        </div>
        <button type="submit" class="btn" style="width:150px;background-color:#fdc57b; color:#394a51">Update</button>
        <a asp-controller="BlogPost" asp-action="GetBlogPost" asp-route-id="@Model.Id" class="btn btn-secondary" style="width:150px;background-color:#394a51; color:#fbf2d5">
            Cancel
        </a>
    </div>
</form>