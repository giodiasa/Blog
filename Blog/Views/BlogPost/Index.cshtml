@model IEnumerable<Blog.Models.BlogPostModel>

    @if (Model.Count() > 0)
{
    <a asp-controller="BlogPost" asp-action="CreateBlogPost" class="btn" style="margin-bottom: 15px; background-color:#352f44; color:#dbd8e3;">
        <i class="bi bi-plus-circle"></i> &nbsp; Add New Post
    </a>
    foreach (var item in Model)
    {
        <article class="blog-post">
            <h2 class="blog-post-title mb-1">@item.Title</h2>
            <p class="blog-post-meta">@item.CreateDate.ToString("d") by name</p>
            <p>@Html.Raw(item.Text)</p>
        </article>
        <a class="btn btn-lg" asp-controller="BlogPost" asp-action="GetBlogPost" asp-route-id="@item.Id" style="background-color:#fdc57b; color:#394a51">Edit or Delete Post</a>
        <hr/>
    }
}
else {
    <a asp-controller="BlogPost" asp-action="CreateBlogPost" class="btn" style="margin-bottom: 15px; background-color:#352f44; color:#dbd8e3;">
        <i class="bi bi-plus-circle"></i> &nbsp; Add New Post
    </a>
}

